aside(class="col-xs-3")
  .panel(class="panel-default")
    .panel-heading
      h3.panel-title Presentations
    .panel-body
      p
        span.text-warning(ng-hide="presentations.length") No presentation available
      ul
        li(ng-repeat="(id, presentation) in presentations") 
          p.text-muted{{presentation.value.title}}&nbsp;&mdash;
            &nbsp;
            a(ng-href='/admin/#/edit/{{presentation.id}}') edit
            &nbsp;
            a(href='/admin/#/view') view
            
section(class="col-xs-6")
  .panel(class="panel-default")
    .panel-heading
      h3.panel-title
        span.text-muted Create a new presentation &nbsp;
        span.text-info {{presentation.title}}    
    .panel-body
      form#new-slide(role="form", ng-submit="createPresentation(presentation)")
        .form-group
          label(for="presentation-title") Title
          input.form-control#presentation-title(type="text", name="presentation-title", placeholder="type a title", ng-model="presentation.title")
        .form-group
          label(for="presentation-description") Description
          input.form-control#presentation-description(type="text", name="presentation-description", placeholder="type a description", ng-model="presentation.description")
        input.btn(type="submit", class="btn-block btn-primary")    
