html(lang="en", ng-app="adminApp", ng-controller="eventController")

head
  title Admin App
  link(rel="stylesheet", href="libs/css/bootstrap.min.css")
  link(rel="stylesheet", href="libs/css/screen.css")

  
body
  nav.navbar(class="navbar-default")
    .container-fluid
      .btn-group
        button.navbar-btn(class="btn btn-default", type="button", ng-click="save()") Save
        button.navbar-btn(class="btn btn-default", type="button", ng-click="edit()") Edit
        button.navbar-btn(class="btn btn-default", type="button", ng-click="add()") Add
        button.navbar-btn(class="btn btn-default", type="button", ng-click="remove()") Remove
  .container-fluid
    aside(class="col-sm-3")
      h3 Presentations
      p
        span.text-warning(ng-hide="presentations.length") Aucune pr√©sentation disponible 
      ul
        li(ng-repeat="presentation in presentations") 
          a(href='/#')
            span.text-info{{presentation.title}}&nbsp;&mdash;&nbsp;
            span.text-muted {{presentation.description}}
        
    main(class="col-sm-6" ng-view)
    

  script(src="libs/js/jquery.min.js")
  script(src="libs/js/bootstrap.min.js")
  script(src="libs/js/angular.min.js")
  script(src="libs/js/angular-route.min.js")


  <!-- App -->
  script(src="js/application/AdminApp.js")  
  
  script(src="js/services/ContentFactory.js")
  script(src="js/services/PresentationFactory.js")
  script(src="js/services/SlideFactory.js")

  script(src="js/services/AuthService.js")
  script(src="js/services/UtilsService.js")

  script(src="js/controllers/EventController.js")
  
