aside(class="col-xs-3")
  .panel(class="panel-default")
    .panel-heading
      h3.panel-title Slides
    .panel-body
      p
        span.text-warning(ng-hide="slides.length") No slide available
      ul
        li(ng-repeat="slide in slides")
          p.text-muted{{slide.title}}

section(class="col-xs-6")
  .panel(class="panel-default")
    .panel-heading
      h3.panel-title Create a new slide
    .panel-body
      form#new-slide(role="form", ng-submit="createSlide(slide)")
        .form-group
          label(for="slide-title") Title
          input.form-control#slide-title(type="text", name="slide-title", placeholder="Title", ng-model="slide.title")
        .form-group
          label(for="slide-text") Content
          textarea.form-control#slide-text(name="slide-text", placeholder="Text", ng-model="slide.text")
        input.btn(type="submit", class="btn-block btn-success")   

